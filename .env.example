# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# Database Configuration
# =============================================================================
# Supported: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=n8n_ai
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# Session Configuration
# =============================================================================
# Supported: file, cookie, database, apc, memcached, redis, dynamodb, array
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# Broadcasting, Cache, Queue Configuration
# =============================================================================
# Supported: pusher, ably, redis, log, null
BROADCAST_CONNECTION=log

# Supported: local, public, s3
FILESYSTEM_DISK=local

# Supported: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=database

# Supported: apc, array, database, file, memcached, redis, dynamodb, octane, null
CACHE_STORE=database
# CACHE_PREFIX=

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# Memcached Configuration (Optional)
# =============================================================================
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# Mail Configuration
# =============================================================================
# Supported: smtp, sendmail, mailgun, ses, postmark, resend, log, array, failover, roundrobin
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS Configuration (For S3, SES, etc.)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Third-Party Email Services (Optional)
# =============================================================================
# Postmark
POSTMARK_API_KEY=

# Resend
RESEND_API_KEY=

# =============================================================================
# n8n Integration Configuration (REQUIRED FOR CORE FUNCTIONALITY)
# =============================================================================
# The URL of your n8n webhook endpoint that will receive ad script tasks
# Example: https://your-n8n-instance.com/webhook/ad-script-processing
N8N_WEBHOOK_URL=

# API key for authenticating callback requests from n8n to Laravel
# Generate a secure random string: php -r "echo bin2hex(random_bytes(32));"
N8N_API_KEY=

# Secret key for HMAC signature validation on n8n callbacks
# Generate a secure random string: php -r "echo bin2hex(random_bytes(32));"
N8N_WEBHOOK_SECRET=

# Timeout in seconds for n8n webhook calls (default: 120)
N8N_TIMEOUT=120

# Rate limiting configuration for n8n API endpoints
N8N_RATE_LIMIT_MAX_ATTEMPTS=60
N8N_RATE_LIMIT_DECAY_MINUTES=1

# Retry configuration for failed n8n webhook calls
N8N_RETRY_MAX_ATTEMPTS=3
N8N_RETRY_DELAY_SECONDS=5
N8N_RETRY_BACKOFF_MULTIPLIER=2

# =============================================================================
# Slack Integration Configuration (OPTIONAL - For failure notifications)
# =============================================================================
# Slack webhook URL for sending failure notifications
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Slack bot token (if using Slack API instead of webhooks)
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# =============================================================================
# Vite Configuration (For frontend asset building)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://127.0.0.1:5173
